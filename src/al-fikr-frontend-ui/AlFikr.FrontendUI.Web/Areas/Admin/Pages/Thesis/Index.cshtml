@model AlFikr.FrontendUI.Web.Areas.Admin.Pages.Thesis.IndexModel
@{
}
<partial name="ErrorMessageAlert" model="Model.ErrorText" />


<div class="container-fluid">

    @*     // Affichage de message de sucess  (Update: 26/08/2024)
