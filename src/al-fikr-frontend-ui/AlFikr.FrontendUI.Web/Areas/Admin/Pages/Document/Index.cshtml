@page 
@model AlFikr.FrontendUI.Web.Areas.Admin.Pages.Document.IndexModel
@{
}
<div class="container-fluid">
    <div class="row" style="padding-bottom:1%">
        <div class="col-md-6">
            <h2 style="color:#6777ef">Liste des livres (@ViewBag.NbBooks)</h2>
        </div>

        <div class=" col-md-6 text-right">
            <div class="p-2 border float-right">
                <button onclick="showModelAddArticle()" class="btn btn-primary text-white">Importer (.xml / .mrc / .xlsm / .csv)</button>
                <a href="/Document/ExportDataToExcel" onclick="" class="btn btn-info text-white">Exporter( .xlsx )</a>
            </div>
            <form class="p-2 float-right">
                <a asp-page="/Document/Upsert" asp-area="Admin" class="btn btn-primary text-white">Ajouter</a>
            </form>
        </div>

    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 table-responsive">
            <table id="livre" class="table table-stripe table-bordered table-hover">
                <thead>
                    <tr>
                        <th hidden>Id</th>
                        <th style="width:10%">Titre</th>
                        <th>ISBN</th>
                        <th>Collection</th>
                        <th>Etat</th>

                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="list-content">
                    @foreach (var p in Model.ListOfEbooks)
                    {
                        // Collection collection = collections.Find(x => x.Id == p.IdCollection);
                        <tr>
                            <td hidden>@p.Id</td>
                            <td id="title-@p.Id">@p.OriginalTitle</td>
                            <td>@p.ISBN</td>
                            <td>test </td>
                            <td>test </td>

                            <td class="text-center">
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">


                                        <a class="dropdown-item" href="/home/book?id=@p.Id" target="_blank"><i class="fas fa-eye m-r-5"></i> Description </a>



                                        <a class="dropdown-item" href="/Document/Upsert?id=@p.Id"><i class="fas fa-edit m-r-5"></i> Editer</a>



                                        <a class="dropdown-item" href="javascript:void(0)" onclick="deleteDocument('@p.Id')"><i class="fas fa-trash m-r-5"></i> Supprimer</a>


                                        <a class="dropdown-item" href="javascript:void(0)" onclick="viewer('@p.Id', '@p.Id')"><i class="fas fa-book m-r-5"></i> Texte intégral</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>