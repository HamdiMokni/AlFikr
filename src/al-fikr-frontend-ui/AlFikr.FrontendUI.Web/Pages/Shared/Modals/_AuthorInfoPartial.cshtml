@using AlFikr.FrontendUI.Entities

<!-- Modal -->
<div class="modal fade" id="authorsInfo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AuthorTitle" style="font-weight:bold">@localizer["Auteur"]</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row" id="infoAuthorbody">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background-color:#ecb43a;color:#ffffff">Close</button>
            </div>
        </div>
    </div>
</div>