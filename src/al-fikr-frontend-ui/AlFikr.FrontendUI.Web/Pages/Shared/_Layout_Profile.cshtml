        <li class="dropdown">
            <a href="" class="nav-link toggled" data-toggle="tooltip" data-original-title="Catalogues" data-placement="right"><i class="fas fa-object-group"></i><span>Catalogues</span></a>
        </li>
        <li onclick="$('.loader').show()" class="dropdown">
